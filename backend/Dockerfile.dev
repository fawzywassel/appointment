FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY prisma ./prisma/

# Install dependencies
RUN npm install

# Generate Prisma Client
RUN npx prisma generate

# Expose port
EXPOSE 3001

# Install dependencies for Prisma
RUN apk add --no-cache openssl

# Start in development mode
CMD ["npm", "run", "start:dev"]
